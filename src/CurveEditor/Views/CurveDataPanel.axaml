<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CurveEditor.ViewModels"
             xmlns:models="using:CurveEditor.Models"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
             x:Class="CurveEditor.Views.CurveDataPanel"
             x:DataType="vm:MainWindowViewModel">
    
    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                Padding="8,6">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Curve Data"
                               FontWeight="Bold"
                               FontSize="13"/>
                    <TextBlock Text="{Binding SelectedSeries.Name, StringFormat='Series: {0}'}"
                               FontSize="11"
                               Foreground="Gray"
                               IsVisible="{Binding SelectedSeries, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            Spacing="4">
                    <TextBlock Text="{Binding SelectedSeries.Data.Count, StringFormat=\{0\} points}"
                               FontSize="10"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               IsVisible="{Binding SelectedSeries, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Data Grid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding SelectedSeries.Data}"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="False"
                  IsReadOnly="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  IsVisible="{Binding SelectedSeries, Converter={x:Static ObjectConverters.IsNotNull}}"
                  CellEditEnded="DataGrid_CellEditEnded">
            <DataGrid.Columns>
                <DataGridTextColumn Header="%" 
                                    Binding="{Binding Percent}" 
                                    Width="50"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="RPM" 
                                    Binding="{Binding DisplayRpm}" 
                                    Width="80"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Torque" 
                                    Binding="{Binding Torque, StringFormat=N2}" 
                                    Width="80"
                                    IsReadOnly="False"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Empty state -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    IsVisible="{Binding SelectedSeries, Converter={x:Static ObjectConverters.IsNull}}">
            <TextBlock Text="No series selected"
                       Foreground="Gray"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Select a series to view data"
                       Foreground="Gray"
                       FontSize="11"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
