<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CurveEditor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="CurveEditor.Views.ValidationPanel"
             x:DataType="vm:MainWindowViewModel">

    <Grid RowDefinitions="Auto,*">
        <Border Grid.Row="0" Classes="PanelHeaderContainer">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                <TextBlock Grid.Column="0"
                           Text="Image"
                           Classes="PanelHeader"/>
                <Button Grid.Column="1"
                        Content="Load Background Image"
                        Command="{Binding LoadBackgroundImageCommand}"
                        IsEnabled="{Binding CurrentMotor, Converter={x:Static ObjectConverters.IsNotNull}}"
                        Padding="8,4"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <Border Grid.Row="1" Background="{DynamicResource CurveEditor.SideBar.BackgroundBrush}">
            <ScrollViewer>
                <StackPanel Margin="8" Spacing="8">
                    <!-- Placeholder for image controls -->
                    <TextBlock Text="No background images loaded"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               FontStyle="Italic"
                               IsVisible="{Binding !HasBackgroundImages}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
